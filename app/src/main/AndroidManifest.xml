<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wuguangxin.simple" >

    <!-- 6.0 拨打电话 -->
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <!-- 6.0 手机状态 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <!-- 6.0 读存储卡 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <!-- 6.0 写存储卡 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".TabHost0_Activity"/>
        <activity android:name=".TabHost1_Activity"/>
        <activity android:name=".TabHost2_Activity"/>
        <activity android:name=".TabHostDemoActivity"/>

        <activity android:name=".ToastUtilsActivity"/>
        <activity android:name=".MyDialogActivity"/>
        <activity android:name=".ItemViewActivity"/>
        <activity android:name=".CircleProgressViewActivity"/>
        <activity android:name=".GestureViewActivity"/>
    </application>

</manifest>