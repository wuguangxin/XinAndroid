<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:id="@+id/call_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@color/transparent"
        android:gravity="center"
        android:inputType="phone"
        android:maxLength="13"
        android:padding="15dp"
        tools:text="18612569758"
        android:textSize="30dp" />


    <LinearLayout style="@style/call_layout">

        <TextView
            android:id="@+id/call_1"
            style="@style/call_button"
            android:text="1" />

        <TextView
            android:id="@+id/call_2"
            style="@style/call_button"
            android:text="2" />

        <TextView
            android:id="@+id/call_3"
            style="@style/call_button"
            android:text="3" />
    </LinearLayout>

    <LinearLayout style="@style/call_layout">

        <TextView
            android:id="@+id/call_4"
            style="@style/call_button"
            android:text="4" />

        <TextView
            android:id="@+id/call_5"
            style="@style/call_button"
            android:text="5" />

        <TextView
            android:id="@+id/call_6"
            style="@style/call_button"
            android:text="6" />
    </LinearLayout>

    <LinearLayout style="@style/call_layout">

        <TextView
            android:id="@+id/call_7"
            style="@style/call_button"
            android:text="7" />

        <TextView
            android:id="@+id/call_8"
            style="@style/call_button"
            android:text="8" />

        <TextView
            android:id="@+id/call_9"
            style="@style/call_button"
            android:text="9" />
    </LinearLayout>

    <LinearLayout style="@style/call_layout">

        <TextView
            android:id="@+id/call_x"
            style="@style/call_button"
            android:text="*" />

        <TextView
            android:id="@+id/call_0"
            style="@style/call_button"
            android:text="0" />

        <TextView
            android:id="@+id/call_j"
            style="@style/call_button"
            android:text="#" />
    </LinearLayout>

    <LinearLayout style="@style/call_layout">

        <TextView
            style="@style/call_button"
            android:background="@null"
            android:text="" />
<!--        //有边界-->
<!--        ?android:attr/selectableItemBackground-->
<!--        //无边界 （要求API21以上）-->
<!--        ?android:attr/selectableItemBackgroundBorderless-->
        <ImageView
            android:id="@+id/call_commit"
            style="@style/call_button"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/call"
            android:text="0" />

        <ImageView
            android:id="@+id/call_delete"
            style="@style/call_button"
            android:background="@color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/call_remove"
            android:text="#" />
    </LinearLayout>

    <Button
        android:id="@+id/call_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置"/>

</LinearLayout>