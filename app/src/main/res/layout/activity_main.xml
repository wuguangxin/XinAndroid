<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F3F5"
    android:orientation="vertical">

    <Button
        android:id="@+id/ToastUtils"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ToastUtils"/>

    <Button
        android:id="@+id/MyDialog"
        android:layout_width="-2dip"
        android:layout_height="-2dip"
        android:text="MyDialog"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_weight="0"
        android:text="ToastUtilsToastUtilsToastUtils"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="50dip"
        android:background="#0000FF"/>

    <com.wuguangxin.view.ItemView
        android:id="@+id/itemView"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_marginTop="5dip"
        android:background="@color/white"
        android:paddingEnd="15dp"
        android:paddingLeft="15dip"
        android:paddingRight="15dp"
        android:paddingStart="15dip"
        app:dividerBottom_marginLeft="15dip"
        app:dividerColor="#DFDFDF"
        app:dividerMode="both"
        app:dividerSize="0.5dip"
        app:dividerTop_marginLeft="15dip"
        app:iconRight="@mipmap/arrow"
        app:key="姓名："
        app:keySize="14dip"
        app:keyStyle="normal"
        app:value="张三丰张三丰张三丰张三丰张三丰张三丰张三丰张三丰张三丰张三丰"
        app:valueSize="14dip">
    </com.wuguangxin.view.ItemView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_marginTop="5dip"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="15dip"
        android:paddingRight="15dp"
        android:text="Hello! 张三丰 12345678901234567890"
        android:textColor="@color/black"
        android:textStyle="bold"/>

</LinearLayout>
