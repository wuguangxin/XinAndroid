<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:xin="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F3F5"
    android:orientation="vertical">

    <Button
        android:id="@+id/ToastUtils"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ToastUtils"/>

    <Button
        android:id="@+id/MyDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MyDialog"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="50dip"
        android:background="#0000FF"/>

    <com.wuguangxin.view.ItemView
        android:id="@+id/itemView"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_marginTop="5dip"
        android:background="@color/white"
        android:paddingLeft="15dip"
        android:paddingRight="15dp"
        xin:bottomDividerMarginLeft="15dip"
        xin:item_dividerColor="#DFDFDF"
        xin:item_dividerMode="both"
        xin:item_dividerSize="0.5dip"
        xin:item_iconRight="@mipmap/arrow"
        xin:item_key="Hello! 张三丰 12345678901234567890"
        xin:item_keySize="14dip"
        xin:item_keyStyle="bold"
        xin:item_value="哈哈哈"
        xin:item_valueSize="14dip"
        xin:topDividerMarginLeft="15dip"
        />

    <com.wuguangxin.view.ItemView
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_marginTop="5dip"
        android:background="@color/white"
        android:paddingLeft="15dip"
        android:paddingRight="15dp"
        android:textStyle="bold"
        xin:bottomDividerMarginLeft="15dip"
        xin:item_dividerColor="#DFDFDF"
        xin:item_dividerMode="both"
        xin:item_dividerSize="0.5dip"
        xin:item_iconRight="@mipmap/arrow"
        xin:item_key="Hello! 张三丰 12345678901234567890"
        xin:item_keyStyle="bold"
        xin:item_keyColor="@color/black"
        xin:item_keySize="14dip"
        xin:item_value="哈哈哈"
        xin:item_valueStyle="bold"
        xin:item_valueSize="14dip"
        xin:topDividerMarginLeft="15dip"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_marginTop="5dip"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="15dip"
        android:paddingRight="15dp"
        android:text="Hello! 张三丰 12345678901234567890"
        android:textColor="@color/black"
        android:textStyle="bold"/>

</LinearLayout>
