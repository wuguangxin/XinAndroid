<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <!--    <com.wuguangxin.view.FlowLayout-->
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        tools:listitem="@layout/button" />

    <com.wuguangxin.view.FlowLayout2
        android:id="@+id/test_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#999999"
        android:orientation="vertical" >

        <TextView
            android:layout_width="100dip"
            android:layout_height="50dip"
            android:background="@color/red"
            android:gravity="center"
            android:text="1" />
        <TextView
            android:layout_width="100dip"
            android:layout_height="50dip"
            android:background="@color/green"
            android:gravity="center"
            android:text="2" />
        <TextView
            android:layout_width="100dip"
            android:layout_height="50dip"
            android:background="@color/blue"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="3" />
        <TextView
            android:layout_width="100dip"
            android:layout_height="50dip"
            android:background="@color/black"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="4" />
        <TextView
            android:layout_width="100dip"
            android:layout_height="50dip"
            android:background="@color/yellow"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="5" />
        <TextView
            android:layout_width="100dip"
            android:layout_height="50dip"
            android:background="#333333"
            android:gravity="center"
            android:textColor="#ffffff"
            android:text="6" />


<!--        <include layout="@layout/button" />-->
<!--        <include layout="@layout/button" />-->
<!--        <include layout="@layout/button" />-->
<!--        <include layout="@layout/button" />-->
<!--        <include layout="@layout/button" />-->
    </com.wuguangxin.view.FlowLayout2>

    <TextView
        android:layout_width="100dip"
        android:layout_height="50dip"
        android:background="@color/black"
        android:gravity="center"
        android:text="5"
        android:textColor="@color/yellow" />

    <com.wuguangxin.view.FlowLayout
        android:id="@+id/test6Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000033"
        app:itemSpace="5dp"
        app:lineSpace="5dp" />

    <com.wuguangxin.view.FlowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemSpace="5dp"
        app:lineSpace="5dp">

        <Button
            android:id="@+id/invalidate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="invalidate"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/postInvalidate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="postInvalidate"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/requestLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="requestLayout"
            android:textAllCaps="false" />
    </com.wuguangxin.view.FlowLayout>

</LinearLayout>