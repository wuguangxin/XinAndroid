<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ================== 公共属性区域 ======================================================= -->
    <attr name="width" format="reference|dimension"/>
    <attr name="height" format="reference|dimension"/>
    <!--进度百分比0.0~1.0-->
    <attr name="progress" format="float"/>

    <attr name="startAngle" format="integer"/>
    <attr name="sweepAngle" format="integer"/>
    <attr name="circleRadius" format="reference|dimension"/>	<!--圆半径-->

    <!--key 文本-->
    <attr name="key" format="reference|string" />
    <!--value 文本-->
    <attr name="value" format="reference|string" />
    <!--指示器 Drawable-->
    <attr name="divider" format="reference" />
    <!--指示器样式，none没有，both上下有，top上有，bottom下有-->
    <attr name="dividerMode" format="enum">
        <!--没有线条-->
        <enum name="none" value="0" />
        <!--上下都有-->
        <enum name="both" value="1" />
        <!--上有-->
        <enum name="top" value="2" />
        <!--下有-->
        <enum name="bottom" value="3" />
    </attr>

    <!-- ================== 私有属性区域 ======================================================== -->
    <declare-styleable name="MyCheckBox">
        <attr name="value"/>
    </declare-styleable>
    
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="border_overlay" format="boolean" />
    </declare-styleable>
    
    <declare-styleable name="ItemView">
        <!--key-->
        <attr name="key" />
        <attr name="keySize" format="reference|dimension" />
        <attr name="keyColor" format="reference|color" />
        <attr name="keyLineSpacingExtra" format="reference|dimension" />
        <attr name="keySingleLines" format="boolean" />
        <!--key-hint-->
        <attr name="keyHint" format="string"/>
        <attr name="keyHintColor" format="reference|color" />

        <attr name="keyWidth" format="reference|dimension" />
        <attr name="keyHeight" format="reference|dimension" />
        <attr name="keyWeight" format="float" />
        <attr name="keyBackground" format="reference|color" />
        <!--key margin-->
        <attr name="keyMargin" format="reference|dimension" />
        <attr name="keyMarginLeft" format="reference|dimension" />
        <attr name="keyMarginTop" format="reference|dimension" />
        <attr name="keyMarginRight" format="reference|dimension" />
        <attr name="keyMarginBottom" format="reference|dimension" />
        <!--key-padding-->
        <attr name="keyPadding" format="reference|dimension" />
        <attr name="keyPaddingLeft" format="reference|dimension" />
        <attr name="keyPaddingTop" format="reference|dimension" />
        <attr name="keyPaddingRight" format="reference|dimension" />
        <attr name="keyPaddingBottom" format="reference|dimension" />
        <!--key-drawable-->
        <attr name="keyDrawableLeft" format="reference" />
        <attr name="keyDrawableRight" format="reference" />
        <attr name="keyDrawablePadding" format="reference|dimension" />

        <!--value-->
        <attr name="value" />
        <attr name="valueSize" format="reference|dimension" />
        <attr name="valueColor" format="reference|color" />
        <attr name="valueLineSpacingExtra" format="reference|dimension" />
        <attr name="valueSingleLine" format="boolean" />
        <!--value-hint-->
        <attr name="valueHint" format="string"/>
        <attr name="valueHintColor" format="reference|color" />

        <attr name="valueWidth" format="reference|dimension" />
        <attr name="valueHeight" format="reference|dimension" />
        <attr name="valueWeight" format="float" />
        <attr name="valueBackground" format="reference|color" />
        <!--value margin-->
        <attr name="valueMargin" format="reference|dimension" />
        <attr name="valueMarginLeft" format="reference|dimension" />
        <attr name="valueMarginTop" format="reference|dimension" />
        <attr name="valueMarginRight" format="reference|dimension" />
        <attr name="valueMarginBottom" format="reference|dimension" />
        <!--value-padding-->
        <attr name="valuePadding" format="reference|dimension" />
        <attr name="valuePaddingLeft" format="reference|dimension" />
        <attr name="valuePaddingTop" format="reference|dimension" />
        <attr name="valuePaddingRight" format="reference|dimension" />
        <attr name="valuePaddingBottom" format="reference|dimension" />
        <!--value-drawable-->
        <attr name="valueDrawableLeft" format="reference" />
        <attr name="valueDrawableRight" format="reference" />
        <attr name="valueDrawablePadding" format="reference|dimension" />

        <!--key文字内部对齐-->
        <attr name="keyGravity">
            <flag name="left" value="3" /> <!--左对齐-->
            <flag name="top" value="48" /> <!--上对齐-->
            <flag name="right" value="5" /> <!--右对齐-->
            <flag name="bottom" value="80" /> <!--下对齐-->
            <flag name="center" value="17" /> <!--居中-->
            <flag name="center_horizontal" value="1" /> <!--水平居中-->
            <flag name="center_vertical" value="16" /> <!--垂直居中-->
        </attr>

        <!--value文字内部对齐-->
        <attr name="valueGravity">
            <flag name="left" value="3" /> <!--左对齐-->
            <flag name="top" value="48" /> <!--上对齐-->
            <flag name="right" value="5" /> <!--右对齐-->
            <flag name="bottom" value="80" /> <!--下对齐-->
            <flag name="center" value="17" /> <!--居中-->
            <flag name="center_horizontal" value="1" /> <!--水平居中-->
            <flag name="center_vertical" value="16" /> <!--垂直居中-->
        </attr>

        <!--key字体样式.-->
        <attr name="keyStyle">
            <!--正常-->
            <flag name="normal" value="0" />
            <!--粗体-->
            <flag name="bold" value="1" />
        </attr>

        <!-- value字体样式. -->
        <attr name="valueStyle">
            <!--正常-->
            <flag name="normal" value="0" />
            <!--粗体-->
            <flag name="bold" value="1" />
        </attr>

        <!--线条图标-->
        <attr name="divider"/>
        <!--间隔线样式，none没有，both上下有，top上有，bottom下有-->
        <attr name="dividerMode" />

        <!--上指示器距左-->
        <attr name="dividerTop_marginLeft" format="reference|dimension" />
        <!--上指示器距右-->
        <attr name="dividerTop_marginRight" format="reference|dimension" />
        <!--下指示器距左-->
        <attr name="dividerBottom_marginLeft" format="reference|dimension" />
        <!--下指示器距右-->
        <attr name="dividerBottom_marginRight" format="reference|dimension" />

        <attr name="iconLeft" format="reference" />
        <attr name="iconLeft_width" format="reference|dimension" />
        <attr name="iconLeft_height" format="reference|dimension" />
        <attr name="iconLeft_marginLeft" format="reference|dimension" />
        <attr name="iconLeft_marginTop" format="reference|dimension" />
        <attr name="iconLeft_marginRight" format="reference|dimension" />
        <attr name="iconLeft_marginBottom" format="reference|dimension" />
        <attr name="iconRight" format="reference" />
        <attr name="iconRight_width" format="reference|dimension" />
        <attr name="iconRight_height" format="reference|dimension" />
        <attr name="iconRight_marginLeft" format="reference|dimension" />
        <attr name="iconRight_marginTop" format="reference|dimension" />
        <attr name="iconRight_marginRight" format="reference|dimension" />
        <attr name="iconRight_marginBottom" format="reference|dimension" />
    </declare-styleable>
    
    <declare-styleable name="PerCircleView">
        <attr name="maxValue" format="reference|integer" />
        <attr name="currentValue" format="reference|integer" />
        <attr name="textSize" format="reference|dimension" />
        <attr name="textColor" format="reference|color" />
        <attr name="bottomColor" format="reference|color" />
        <attr name="topColor" format="reference|color" />
        <!-- 上圆的大小 -->
        <attr name="topCircleSize" format="reference|dimension" />
        <!-- 底圆的大小 -->
        <attr name="bottomCircleSize" format="reference|dimension" />
    </declare-styleable>
    
    <declare-styleable name="WaveView2">
		<attr name="above_wave_color" format="color"/>
		<attr name="blow_wave_color" format="color"/>
        <attr name="progress"/>
        <attr name="wave_length" format="enum">
            <enum name="large" value="1"/>
            <enum name="middle" value="2"/>
            <enum name="little" value="3"/>
        </attr>
        <attr name="wave_height" format="enum">
            <enum name="large" value="1"/>
            <enum name="middle" value="2"/>
            <enum name="little" value="3"/>
        </attr>
        <attr name="wave_hz" format="enum">
            <enum name="fast" value="1"/>
            <enum name="normal" value="2"/>
            <enum name="slow" value="3"/>
        </attr>
	</declare-styleable>
	
    <declare-styleable name="Themes">
		<attr name="waveViewStyle" format="reference"/>
	</declare-styleable>
	
    <declare-styleable name="SwitchButton">
		<attr name="kswThumbDrawable" format="reference"/>
		<attr name="kswThumbColor" format="color|reference"/>
		<attr name="kswThumbMargin" format="dimension|reference"/>
		<attr name="kswThumbMarginTop" format="dimension|reference"/>
		<attr name="kswThumbMarginBottom" format="dimension|reference"/>
		<attr name="kswThumbMarginLeft" format="dimension|reference"/>
		<attr name="kswThumbMarginRight" format="dimension|reference"/>
		<attr name="kswThumbWidth" format="dimension|reference"/>
		<attr name="kswThumbHeight" format="dimension|reference"/>
		<attr name="kswThumbRadius" format="dimension|reference"/>
		<attr name="kswBackRadius" format="dimension|reference"/>
		<attr name="kswBackDrawable" format="reference"/>
		<attr name="kswBackColor" format="color|reference"/>
		<attr name="kswFadeBack" format="boolean"/>
		<attr name="kswBackMeasureRatio" format="float"/>
		<attr name="kswAnimationDuration" format="integer"/>
		<attr name="kswTintColor" format="color|reference"/>
	</declare-styleable>
	
    <declare-styleable name="NoticeTextView">
        <attr name="text_size" format="reference|dimension" />
        <attr name="text_color" format="reference|color" />
        <!-- 左边的Icon -->
        <attr name="icon_resid" format="reference" /> 
    </declare-styleable>


    <declare-styleable name="DynamicWave" >
        <!-- 进度百分比 也是水波纹的高度 废弃，用progress -->
        <attr name="dw_progress" format="reference|integer" />
    </declare-styleable>

    <!--半圆形仪表进度组件-->
    <declare-styleable name="CircleProgressView">
        <!--顶部圆环的颜色-->
        <attr name="top_color" format="reference|color" />
        <!--背景色-->
        <attr name="background_color" format="reference|color" />
        <!--渐变开始色-->
        <attr name="start_color" format="reference|color" />
        <!--渐变结束色-->
        <attr name="end_color" format="reference|color" />
        <!--圆环大小-->
        <attr name="stroke_width" format="reference|dimension" />
        <!--Top圆环大小-->
        <attr name="top_stroke_width" format="reference|dimension" />
        <!--是否显示Top圆环-->
        <attr name="showTopOval" format="boolean" />

        <!--圆环开始角度-->
        <attr name="startAngle"/>
        <!--圆环跨度角度-->
        <attr name="sweepAngle"/>
        <!--进度值0-1-->
        <attr name="progress"/>
        <!--比例为宽:高，格式"100:50" -->
        <attr name="ratio" format="string" />
    </declare-styleable>

    <!--半圆形仪表进度组件 - 仿微信芝麻信用分-->
    <declare-styleable name="RoundIndicatorView">
        <!--最大数值-->
        <attr name="maxNum" format="reference|integer"/>
        <!--圆盘起始角度-->
        <attr name="startAngle"/>
        <!--圆盘扫过的角度-->
        <attr name="sweepAngle"/>
    </declare-styleable>

    <declare-styleable name="ProgressWaveView">
        <attr name="behindColor" format="reference|color"/>
        <attr name="aboveColor" format="reference|color"/>
        <attr name="waveProgress" format="reference|float"/>
        <attr name="shapeType" format="enum">
            <enum name="square" value="0"/>
            <enum name="circle" value="1"/>
        </attr>
    </declare-styleable>

    <!--手势密码-->
    <declare-styleable name="GestureView">
        <attr name="circleNum" format="reference|integer"/>		    <!--水平的圆圈个数，3X3就是3，4X4就是4-->
        <attr name="limitNum" format="reference|integer"/>		    <!--设置最少绘制数量-->
        <attr name="circleSpace" format="reference|dimension"/>		<!--圆与圆的间隔距离-->
        <attr name="circleRadius"/>	                                <!--圆半径-->
        <attr name="touchShake" format="boolean"/>	                <!--是否触摸震动-->
        <!--背景-->
        <attr name="backgroundColorNormal" format="reference|color"/>   <!--背景颜色 正常-->
        <attr name="backgroundColorTouch" format="reference|color"/>    <!--背景颜色 触摸-->
        <attr name="backgroundColorError" format="reference|color"/>    <!--背景颜色 错误-->
        <!--外圆-->
        <attr name="outerCycleColorNormal" format="reference|color"/>	<!--外圆颜色 正常-->
        <attr name="outerCycleColorTouch" format="reference|color"/>	<!--外圆颜色 触摸-->
        <attr name="outerCycleColorError" format="reference|color"/>	<!--外圆颜色 错误-->
        <!--内圆-->
        <attr name="innerCycleColorNormal" format="reference|color"/>	<!--内圆颜色 正常-->
        <attr name="innerCycleColorTouch" format="reference|color"/>	<!--内圆颜色 触摸-->
        <attr name="innerCycleColorError" format="reference|color"/>	<!--内圆颜色 错误-->
        <!--连接线-->
        <attr name="linkLineColorNormal" format="reference|color"/>		<!--线条颜色 正常-->
        <attr name="linkLineColorError" format="reference|color"/>		<!--线条颜色 错误-->
        <!-- #其他# -->
        <attr name="outerCycleStrokeSizeError" format="reference|dimension"/>	<!--外圆边框大小 错误时-->
        <attr name="outerCycleStrokeSize" format="reference|dimension"/>		<!--外圆边框大小-->
        <attr name="innerCycleStrokeSize" format="reference|dimension"/>		<!--内圆边框大小-->
        <attr name="linkLineStrokeSize" format="reference|dimension"/>		    <!--连接线条大小-->
        <!--<attr name="backgroundStrokeSize" format="reference|dimension"/>		&lt;!&ndash;背景边框大小&ndash;&gt;-->
    </declare-styleable>

    <declare-styleable name="ItemTextView">
        <attr name="divider"/>
        <attr name="dividerMode" />
        <attr name="topPaddingLeft" format="reference|dimension"/>
        <attr name="topPaddingRight" format="reference|dimension"/>
        <attr name="bottomPaddingLeft" format="reference|dimension"/>
        <attr name="bottomPaddingRight" format="reference|dimension"/>
    </declare-styleable>

    <declare-styleable name="ViewPagerIndicator">
        <!--正常颜色-->
        <attr name="colorNormal" format="reference|color"/>
        <!--选中颜色-->
        <attr name="colorSelected" format="reference|color"/>
        <attr name="lineSize" format="reference|dimension"/>
        <attr name="circleRadius"/>
        <attr name="circlePadding" format="reference|dimension"/>
        <attr name="width"/>
        <attr name="height"/>
        <attr name="rectWidth" format="reference|dimension"/>
        <attr name="rectHeight" format="reference|dimension"/>
        <attr name="count" format="reference|integer"/>
        <attr name="currentItem" format="reference|integer"/>
    </declare-styleable>

</resources>